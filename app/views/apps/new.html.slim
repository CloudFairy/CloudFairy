.mdl-grid
  .mdl-cell.mdl-cell--2-col
  .mdl-cell.mdl-cell--8-col.mdl-card.mdl-shadow--2dp
    = simple_form_for @app do |f|
      .mdl-card__title
        h1 New app
      .mdl-card__supporting-text
        = f.input :name
        = f.input :server_ip
        = f.input :server_user
        .mdl-grid
          .mdl-cell.mdl-cell--1-col
          .mdl-cell.mdl-cell--9-col
            | ssh-rsa  me@sinisterlight.com
      .mdl-card__actions
        = f.button :submit, "submit", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
        = link_to 'Back', apps_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
