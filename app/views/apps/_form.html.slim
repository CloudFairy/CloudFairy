.mdl-grid
  .mdl-cell.mdl-cell--2-col
  .mdl-cell.mdl-cell--8-col.mdl-card.mdl-shadow--2dp
    = simple_form_for @app, defaults: { wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label' }, input_html: {class: 'mdl-textfield__input'}, label_html: {class: 'mdl-textfield__label'} } do |f|
      .mdl-card__title
        h1 = locals[:title]
      .mdl-card__supporting-text
        .mdl-grid
          .mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet.mdl-cell--4-col-phone
            = f.input :name
          .mdl-cell.mdl-cell--4-col.mdl-cell--3-col-tablet.mdl-cell--2-col-phone
            = f.input :server_user
          .mdl-cell.mdl-cell--8-col.mdl-cell--5-col-tablet.mdl-cell--2-col-phone
            = f.input :server_ip
        .mdl-grid
          .mdl-cell.mdl-cell--9-col
            | ssh-rsa  me@sinisterlight.com
      .mdl-card__actions
        = f.button :submit, "submit", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
        = link_to 'Back', apps_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
